<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="medantechno.com.tokohh.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/warning_fake"
            android:background="#df0303"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:padding="5dp"
            android:text="aaa"
            android:gravity="center"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/logonya"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/pakpaklogo"
            android:layout_gravity="center"
            />


        <TextView
            android:id="@+id/mNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Selamat datang di aplikasi Absensi" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/mNIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Absensi"
            android:textColor="#fff"
            />


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/no_data"
        android:text="Selamat datang. Mohon berikan akses lokasi untuk aplikasi ini."
        android:gravity="center"
        />

        <WebView
            android:id="@+id/myWebView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scrollbars=""
            xmlns:android="http://schemas.android.com/apk/res/android">
        </WebView>

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Lakukan Absensi"
            android:id="@+id/btnAbsensi"

            />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
