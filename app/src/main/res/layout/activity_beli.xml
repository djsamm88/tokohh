<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:focusableInTouchMode="true"
    >





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:weightSum="9"
            >
            <TextView
                android:id="@+id/alamat_warung"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:textColor="#fff"
                android:text="Selamat datang."
                android:padding="10dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/nama_warung"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/kuning"
                android:textColor="#000"
                android:text="Syaloom"
                android:padding="10dp"
                android:gravity="center"
                />

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:lines="2"
            android:hint="Alamat antar."
            android:inputType="textMultiLine|textCapSentences"
            android:id="@+id/t4Alamat_antar"
            />
    <ListView
        android:id="@+id/listBeli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp"
        />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:weightSum="10"
            android:background="@color/abuabu"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Ongkir :"
                android:gravity="end"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:id="@+id/t4ongkir"
                android:gravity="end"
                android:text="10000"
                android:textStyle="bold"
                android:textColor="@color/Blue_700"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:weightSum="10"
            android:background="@color/abuabu"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Sub Total :"
                android:gravity="end"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:id="@+id/t4Subtotal"
                android:gravity="end"
                android:text="20000"
                android:textStyle="bold"
                android:textColor="@color/Blue_700"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:weightSum="10"
            android:background="@color/abuabu"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Total :"
                android:gravity="end"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:id="@+id/t4total"
                android:gravity="end"
                android:text="30000"
                android:textStyle="bold"
                android:textColor="@color/Blue_700"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:weightSum="10"
            android:background="@color/abuabu"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Driver :"
                android:gravity="end"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:id="@+id/t4Driver"
                android:gravity="end"
                android:text="Belum dipilih"
                android:textStyle="bold"
                android:textColor="@color/Blue_700"
                android:visibility="visible"

                />





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:weightSum="10"
            android:background="@color/abuabu"
            android:padding="10dp"
            >
            <Button
                android:id="@+id/btnDriver"
                android:background="@color/kuning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Pilih driver"
                android:layout_weight="10"
                android:visibility="visible"
                android:minHeight="30dp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_send_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:weightSum="10"
            android:background="@color/abuabu"
            >



            <Button
                android:id="@+id/btnProses"
                android:background="#ff0000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Proses"
                android:layout_weight="10"
                android:textColor="@color/white"
                />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>


